{
    "name": "simpod/sms-manager",
    "description": "PHP library for sending SMS via SmsManager.cz",
    "keywords": [
        "sms",
        "smsmanager"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.2",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "beberlei/assert": "^3.1",
        "consistence/consistence": "^1.0 || ^2.0",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^5.0",
        "phpstan/phpstan": "^0.10.5",
        "phpstan/phpstan-beberlei-assert": "^0.10.0",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.1",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\SmsManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\SmsManager\\Tests\\": "tests/"
        }
    }
}
