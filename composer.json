{
    "name": "simpod/sms-manager",
    "description": "PHP library for sending SMS via SmsManager.cz",
    "keywords": [
        "sms",
        "smsmanager"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Simon Podlipsky",
            "email": "simon@podlipsky.net"
        }
    ],
    "require": {
        "php": "^7.1",
        "guzzlehttp/guzzle": "^6.0",
        "consistence/consistence": "^1.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^4.0 || ^5.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-strict-rules": "^0.9",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "SimPod\\SmsManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimPod\\SmsManager\\Tests\\": "tests/"
        }
    }
}
